<div class="container mt-5">
    <form id="formAddAlumno">
        <div class="mb-3">

            <input type="text" required class="form-control" id="nombre" name="nombre" placeholder="Nombre y apellido">
        </div>
        <div class="mb-3">

            <input type="text" required class="form-control" id="rut" name="rut"
                placeholder="ingrese su rut con digito verificador">
        </div>
        <div class="mb-3">

            <input type="text" required class="form-control" id="curso" name="curso" placeholder="Nombre del curso">
        </div>
        <div class="mb-3">

            <input type="number" required class="form-control" id="nivel" name="nivel" placeholder="Nivel del curso">
        </div>
        <button class="btn btn-primary" type="submit">Agregar</button>

    </form>
    <a href="/alumnos">
        <button class="btn btn-success mt-3 ">Consultar JSON de Alumnos</button>
    </a>
</div>